{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  //日志清理
  "LogCleanup": {
    "IsEnabled": true,
    "RetentionDays": 2,
    "CheckIntervalHours": 1,
    "LogDirectory": "logs"
  },
  //上游连接配置
  "UpstreamRoutingConnectionOptions": {
    "Endpoint": "10.10.10.10",
    "Port": 9001,
    "Mode": "Client",
    "ConnectTimeoutMs": 3000,
    "ReceiveTimeoutMs": 5000,
    "SendTimeoutMs": 5000,
    "IsAutoReconnectEnabled": true,
    "ReconnectMinDelayMs": 100,
    "ReconnectMaxDelayMs": 2000,
    "ReconnectBackoffFactor": 1.6
  },
  //面板IO配置
  "IoPanelButtonOptions": [
    {
      "Point": 101,
      "ButtonType": "Start",
      "ButtonName": "StartBtn",
      "TriggerState": "High",
      "PollIntervalMs": 10,
      "DebounceWindowMs": 30
    },
    {
      "Point": 102,
      "ButtonType": "Stop",
      "ButtonName": "StopBtn",
      "TriggerState": "High",
      "PollIntervalMs": 10,
      "DebounceWindowMs": 50
    }
  ],
  //联动Io
  "IoLinkagePointOptions": [
    {
      "Point": 1,
      "RelatedSystemState": "EmergencyStop",
      "Name": "EStopLamp",
      "TriggerState": "High",
      "DurationMs": 0,
      "DelayMs": 0,
      "Note": "急停时点亮"
    },
    {
      "Point": 2,
      "RelatedSystemState": "Paused",
      "Name": "PauseLamp",
      "TriggerState": "High",
      "DurationMs": 0,
      "DelayMs": 0,
      "Note": "暂停时点亮"
    },
    {
      "Point": 3,
      "RelatedSystemState": "Running",
      "Name": "RunLampPulse",
      "TriggerState": "High",
      "DurationMs": 200,
      "DelayMs": 500,
      "Note": "运行时延迟闪烁一次"
    }
  ],
  //传感器配置
  "SensorOptions": [
    {
      "Point": 1,
      "Type": "Input",
      "TriggerState": "High",
      "SensorName": "EntrySensor",
      "PollIntervalMs": 10,
      "DebounceWindowMs": 30
    },
    {
      "Point": 2,
      "Type": "Input",
      "TriggerState": "High",
      "SensorName": "FrontSensor",
      "PollIntervalMs": 5,
      "DebounceWindowMs": 20
    },
    {
      "Point": 3,
      "Type": "Input",
      "TriggerState": "Low",
      "SensorName": "EStopSensor",
      "PollIntervalMs": 10,
      "DebounceWindowMs": 50
    }
  ],
  //摆轮配置
  "WheelDiverterConnectionOptions": [
    {
      "DiverterId": 1,
      "Endpoint": "10.10.10.11",
      "Port": 9001,
      "Mode": "Client",
      "ConnectTimeoutMs": 3000,
      "ReceiveTimeoutMs": 5000,
      "SendTimeoutMs": 5000,
      "IsAutoReconnectEnabled": true,
      "ReconnectMinDelayMs": 100,
      "ReconnectMaxDelayMs": 2000,
      "ReconnectBackoffFactor": 1.6
    },
    {
      "DiverterId": 2,
      "Endpoint": "10.10.10.12",
      "Port": 9001,
      "Mode": "Client",
      "ConnectTimeoutMs": 3000,
      "ReceiveTimeoutMs": 5000,
      "SendTimeoutMs": 5000,
      "IsAutoReconnectEnabled": true,
      "ReconnectMinDelayMs": 100,
      "ReconnectMaxDelayMs": 2000,
      "ReconnectBackoffFactor": 1.6
    }
  ]
}
