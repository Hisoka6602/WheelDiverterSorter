<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

	<!-- 日志输出目标 -->
	<targets>

		<!-- 通用文件日志目标 -->
		<target xsi:type="File" name="allfile"
				fileName="logs/system-provisioner-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
				archiveFileName="logs/archives/system-provisioner-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				archiveDateFormat="yyyyMMdd"
				maxArchiveFiles="7" />

		<!-- 站点 + 包裹专用日志（同一个文件，异常除外：异常走 errorfile） -->
		<target xsi:type="File" name="stationParcelFile"
				fileName="logs/station-parcel-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
				archiveFileName="logs/archives/station-parcel-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				archiveDateFormat="yyyyMMdd"
				maxArchiveFiles="7" />

		<!-- 异常日志 -->
		<target xsi:type="File" name="errorfile"
				fileName="logs/errors-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
				archiveFileName="logs/archives/errors-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				archiveDateFormat="yyyyMMdd"
				maxArchiveFiles="7" />

		<!-- 控制台日志目标 -->
		<target xsi:type="Console" name="lifetimeConsole"
				layout="${level:truncate=4:lowercase=true}\: ${logger}[0]${newline}      ${message}${exception:format=tostring}" />
	</targets>

	<!-- 日志路由规则 -->
	<rules>

		<!-- 异常日志 - Error及以上级别单独记录（所有 logger 生效，站点/包裹也包含在内） -->
		<logger name="*" minlevel="Error" writeTo="errorfile" />

		<!-- 站点 + 包裹日志写入同一个文件（异常仍会额外写 errorfile） -->
		<logger name="WheelDiverterSorter.Host.Servers.PositionQueueHostedService"
				minlevel="Trace" writeTo="stationParcelFile" final="false" />

		<logger name="WheelDiverterSorter.Host.Servers.ParcelHostedService"
				minlevel="Trace" writeTo="stationParcelFile" final="false" />

		<logger name="WheelDiverterSorter.Host.Servers.SortingOrchestrationHostedService"
		        minlevel="Trace" writeTo="stationParcelFile" final="false" />
		<!-- 所有日志写入通用文件 -->
		<logger name="*" minlevel="Trace" writeTo="allfile" />

		<!-- 控制台只显示Information及以上级别 -->
		<logger name="*" minlevel="Information" writeTo="lifetimeConsole" />
	</rules>
</nlog>
