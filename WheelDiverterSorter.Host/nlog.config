<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- 日志输出目标 -->
  <targets>
    <!-- 通用文件日志目标 -->
    <target xsi:type="File" name="allfile" fileName="logs/system-provisioner-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/system-provisioner-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- Ping监控日志 -->
    <target xsi:type="File" name="pingfile" fileName="logs/ping-monitor-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${message}"
            archiveFileName="logs/archives/ping-monitor-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- 进程监控日志 -->
    <target xsi:type="File" name="processfile" fileName="logs/process-monitor-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${message}"
            archiveFileName="logs/archives/process-monitor-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- 资源监控日志 -->
    <target xsi:type="File" name="resourcefile" fileName="logs/resource-monitor-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${message}"
            archiveFileName="logs/archives/resource-monitor-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- 异常日志 -->
    <target xsi:type="File" name="errorfile" fileName="logs/errors-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/errors-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- 控制台日志目标 -->
    <target xsi:type="Console" name="lifetimeConsole"
            layout="${level:truncate=4:lowercase=true}\: ${logger}[0]${newline}      ${message}${exception:format=tostring}" />
  </targets>

  <!-- 日志路由规则 -->
  <rules>
    <!-- Ping监控日志 - 单独文件 -->
    <logger name="ZakYip.SystemProvisioner.Service.Services.PingMonitorService" minlevel="Trace" writeTo="pingfile" final="true" />

    <!-- 进程监控日志 - 单独文件 -->
    <logger name="ZakYip.SystemProvisioner.Service.Services.ProcessMonitorService" minlevel="Trace" writeTo="processfile" final="true" />

    <!-- 资源监控日志 - 单独文件 -->
    <logger name="ZakYip.SystemProvisioner.Service.Services.ResourceMonitorService" minlevel="Trace" writeTo="resourcefile" final="true" />

    <!-- 异常日志 - Error及以上级别单独记录 -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- 所有日志写入通用文件 -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />
    
    <!-- 控制台只显示Information及以上级别 -->
    <logger name="*" minlevel="Information" writeTo="lifetimeConsole" />
  </rules>
</nlog>
